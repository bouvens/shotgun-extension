{
  "name": "chrome-shotgun-extension",
  "version": "1.0.0",
  "description": "Chrome extension for shooting web pages",
  "private": true,
  "scripts": {
    "start": "webpack --config webpack/webpack.dev.js",
    "start:watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts,.js ./src",
    "lint:fix": "eslint --fix --ext .ts,.js  ./src"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.159",
    "eslint-config-air-base": "^0.3.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.90.1",
    "webpack-cli": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "author": "Alexander Demin <bouvens@gmail.com> (https://bouvens.github.io/)",
  "homepage": "https://bouvens.github.io/",
  "repository": "github:bouvens/shotgun-extension"
}
